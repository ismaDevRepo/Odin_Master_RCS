<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>web</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/assembly/logstash</directory>
            <outputDirectory>logstash</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${build.directory}/install/logstash</directory>
            <outputDirectory>logstash</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${build.directory}/site</directory>
            <outputDirectory>README</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${build.directory}/install/web</directory>
            <outputDirectory>web</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/${odin-agent-importation.webapp.packaging.finalName}.jar</source>
            <outputDirectory>agents</outputDirectory>
            <destName>${odin-agent-importation.webapp.packaging.finalName}.jar</destName>
        </file>
        <file>
            <source>src/assembly/${odin-agent-importation.webapp.name}.properties</source>
            <outputDirectory>agents</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/${odin-service-interpretation.webapp.packaging.finalName}.war</source>
            <outputDirectory>services</outputDirectory>
            <destName>${odin-service-interpretation.webapp.packaging.finalName}.war</destName>
        </file>
        <file>
            <source>${project.build.directory}/${odin-service-variant.webapp.packaging.finalName}.war</source>
            <outputDirectory>services</outputDirectory>
            <destName>${odin-service-variant.webapp.packaging.finalName}.war</destName>
        </file>
        <file>
            <source>src/assembly/odin.properties</source>
            <outputDirectory>services</outputDirectory>
        </file>
        <file>
            <source>src/assembly/odin-interpretation.properties</source>
            <outputDirectory>services</outputDirectory>
        </file>
        <file>
            <source>src/assembly/odin-variant.properties</source>
            <outputDirectory>services</outputDirectory>
        </file>
    </files>
</assembly>
